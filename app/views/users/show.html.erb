<h3 style="color:DarkOliveGreen;"> <%= flash[:delete] %></h3>

<% if current_user %>
    <h1>Welcome, <%= current_user.first_name %>!</h1>
<% end %>

<% if @user.contractor && @user == current_user %>
    <h3>== CONTRACTOR STATUS ==</h3>
<% end %>

            <br>

<% if @user != current_user %>
    <h2>== Meet Your Fellow Musician ==</h2>
<% end %>

<h3><%= @user.full_name %></h3>
<h4>Instrument: </h4>
<p><%= @user.instrument %></p>
<h4>Bio: </h4>
<p><%= @user.bio %></p>
<h4>Contact: </h4>
<p><%= @user.email %></p>

<% if @user == current_user %>
    <p><%= link_to "Update Your Profile", edit_user_path(current_user)%>
<% end %>

<br><br>

<% if @user.contractor %>
    <h3>Gig Applications Received: </h3>
    <% @requests.each do |request| %>
    <li><%= request.user_name %> for <%= request.gig_name%></li>
    <% end%>

    <h3>== LIST OF POSTED GIGS == </h3>
    <% @user.gigs.each do |gig| %>
    <li><%= link_to gig.title, user_gig_path(@user, gig) %>
    <% end %>
                    <br><br><br><br>
    <%= link_to "New Gig Form", new_user_gig_path(current_user) %>
<% end %>