<h1><%= @gig.title %></h1>
<li><%= @gig.datetime %>
<li><%= @gig.description %>
<li>$<%= @gig.payment %>
<% @gig.instruments.each do |instrument| %>
<li><%= instrument.name %>
<% end %>

<h4>Contact for more info: 

<% @gig.users.each do |user| %>
<%= link_to user.full_name, user_path(user) %></h4>
<ul>
    <li><%= user.email %></li>
</ul>

<% end %>



<% if current_user.contractor  %>

<p><%= link_to "Edit Gig", edit_gig_path(@gig) %>

<% end %>

<p><%= link_to "Check out more Gigs", gigs_path %></p>
<p><%= link_to "Go Back to Your Page", user_path(current_user) %>