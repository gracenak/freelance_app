<%= form_for @gig do |f| %>
    <p><%= f.label :title %>
    <%= f.text_field :title %></p>

    <p><%= f.label :datetime %>
    <%= f.datetime_local_field :datetime %></p>

    <p><%= f.label :description %>
    <%= f.text_area :description %></p>

    <p><%= f.label :payment %>
    $<%= f.text_field :payment %></p>


  <%= f.collection_check_boxes :instrument_ids, Instrument.all, :id, :name %><br>

    <%= f.label "Create New Instrument"%>
    <%= f.fields_for :instruments, @gig.instruments.build do |instruments_fields| %>
    <%= instruments_fields.text_field :name %><br>
    <% end %>

    <%= f.submit %>

<% end %>


