<% if flash[:message] %>
<h3 style="color:DarkRed;"><%= flash[:message] %></h3> 
<% end %>

<h1>Log In</h1>

<%= form_tag('/login') do %>
    <%= label_tag "Email" %>
    <%= text_field_tag :email %>

    <%= label_tag "Password" %>
    <%= password_field_tag :password %>

    <%= submit_tag "Log In"%>

<% end %>
